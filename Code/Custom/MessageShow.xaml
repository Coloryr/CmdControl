<Window x:Class="CmdControl.Custom.MessageShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CmdControl.Custom"
        mc:Ignorable="d"
        Title="MessageShow" Height="150" Width="200" Icon="/Color_yr.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Stroke="#FF5ABED6" StrokeThickness="2"/>
        <TextBlock Text="Label" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap"
                   TextAlignment="Center" Name="ShowData" FontSize="20" Width="164" Height="75" Margin="0,5,0,0"/>
        <Button Content="确定" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Height="25"
                Margin="25,80,0,0" Width="60" Click="Button_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Height="25"
                Margin="100,80,0,0" Width="60" Click="Button_Click_1"/>

    </Grid>
</Window>
