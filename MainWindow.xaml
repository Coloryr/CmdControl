<Window x:Class="CmdControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CmdControl.Custom"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Stroke="#FF5ABED6" StrokeThickness="2"/>
        <TabControl TabStripPlacement="Left" Style="{DynamicResource TabControl}" Background="White">
            <local:UTabItem Header="测试" ShowColor="Red">
                <Grid>
                    <Button Content="Button"/>

                </Grid>
            </local:UTabItem>
            <local:UTabItem Header="测试" ShowColor="Red">
                <Grid>
                    <Canvas Height="100" Width="100"/>

                </Grid>
            </local:UTabItem>
            <local:UTabItem Header="测试" ShowColor="Red">
                <Grid>
                    <Label Content="Label"/>

                </Grid>
            </local:UTabItem>
            <local:UTabItem Header="测试" ShowColor="Red">
                <Grid>

                </Grid>
            </local:UTabItem>
            <local:UTabItem Header="测试" ShowColor="Red">
                <Grid>

                </Grid>
            </local:UTabItem>
        </TabControl>

    </Grid>
</Window>
